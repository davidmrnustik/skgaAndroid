<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <color name="colorGray">#c0c0c0</color>
     <color name="colorGrayDark">#888888</color>
     <color name="colorDarkCyan">#002c3a</color>
     
     <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#393e24</item>
        <item name="android:shadowColor">#d5eb53</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
     </style>
     
	 <style name="Buttons.Intro">
        <item name="android:width">280dp</item>
        <item name="android:layout_marginBottom">16dp</item>
     </style>
     <style name="Buttons.ActionBar">
         <item name="android:textSize">14sp</item>
         <item name="android:minHeight">45sp</item>
     </style>
     <style name="Buttons.AddBy">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        
     </style>
     <style name="Buttons.ActionBar.Main">
        <item name="android:layout_weight">0.5</item>
     </style>
     <style name="Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
     </style>
     
     <style name="AddByNameList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="AddByNameText1">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
    </style>
    <style name="IntroLogoApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">110sp</item>
        <item name="android:layout_marginBottom">100sp</item>
    </style>

    <style name="MainList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    <style name="TitleBar">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:src">@drawable/line</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="RowLayout">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="hint">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/colorGrayDark</item>
    </style>
    <style name="no_names">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="action_bar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="CustomActivityTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>
    
    <style name="LayoutView" parent="android:Theme">
        <item name="android:background">@drawable/bg_pattern</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
    </style>

	<style name="TransparentListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
	
	<style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
	
	<!-- Customize an Action Bar -->
    <style name="MyActionBar">
        <item name="android:background">@drawable/logo_actionbar</item>
        <item name="android:height">36dp</item>
    </style>

</resources>